<resources>
  <style name="ButtonStyle01">
    <item name="android:background">@drawable/button_patch9</item>
    <item name="android:textColor">@drawable/button_color</item>
    <item name="android:textSize">20dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">sans</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="EditView01">
    <item name="android:layout_gravity">left|center_vertical</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dip</item>
    <item name="android:typeface">sans</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:ellipsize">end</item>
    <item name="android:scrollHorizontally">true</item>
  </style>

  <style name="LabelView01">
    <item name="android:layout_gravity">right|center_vertical</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:typeface">sans</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="UuidView01">
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dip</item>
    <item name="android:typeface">sans</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:maxLines">3</item>
    <item name="android:linksClickable">true</item>
  </style>

  <style name="RowView01">
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dip</item>
    <item name="android:typeface">sans</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:ellipsize">end</item>
    <item name="android:scrollHorizontally">true</item>
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

  <style name="BlackTheme" parent="AppTheme">
    <item name="android:background">#000000</item>
  </style>
</resources>
